require 'spec_helper'

describe '<%= type_name -%>' do
  let(:node) { '<%= type_name %>.example.com' }
  let(:params) do
    {
    <%- parameters.lines.each do |line| -%>
    <%= line -%>
    <%- end -%>
    }
  end

  # Puppet::Util::Log.level = :debug
  # Puppet::Util::Log.newdestination(:console)
